{% extends 'base.html.twig' %}

{% block body %}
    <div id="header">
       <a class="home-header" href="">Home</a>
    </div>
    <div id="wrapper">
        <div id="container">

            <div><h2>Enter a search Value: </h2></div>
            <form method="post" action="/search">

             <div class="input-group">
              <span class="input-group-btn">
                <button class="btn btn-success go" type="submit">Go!</button>
              </span>
              <input type="text" name="search" class="form-control movie-title" required placeholder="Search by movie's title"></br>
             </div>

            </form>
            
            <center><img src="/img/giphy.gif" style="width:500px" class="buffer loader"></center>

            <div class="contact-form">
            <p>Request by Email</p>
                <form id="contact" method="post">

                 <div class="input-group">
                  <span class="input-group-btn">
                    <button class="btn btn-success sendEmail" type="submit">Send</button>
                  </span>
                  <input type="text" name="title" id="title-req" class="form-control" required value="" placeholder="Request a movie title">
                  <input type="email" name="email" id="email-req" class="form-control" required value="" placeholder="Enter your Email Address">
                 </div>
                 <p class="notification"></p>
                </form>
            </div>
        </div>
    </div>
{% endblock %}